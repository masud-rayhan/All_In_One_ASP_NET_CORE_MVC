@model IEnumerable<All_In_One.Models.Department>
@{
    ViewData["Title"] = "DepartmentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h2>Department List</h2>
        </div>
        <div class="col-4">
            <a asp-action="Create" class="btn btn-primary text-white float-right">Create New Department</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped border">
                <thead>
                    <tr>
                        <th>
                           
                            @Html.DisplayNameFor(model => model.DepartmentName)
                            @*<label asp-for="DepartmentName" class="control-label"></label>*@
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => x.DepartmentChairman)
                            @*<label asp-for="DepartmentChairman" class="control-label"></label>*@
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => x.DepartmentAddress)
                            @*<label asp-for="DepartmentAddress" class="control-label"></label>*@
                        </th>
                        <th>
                            Oparetion
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(x => item.DepartmentName)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.DepartmentChairman)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.DepartmentAddress)
                            </td>

                            <th>
                                @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId, item.DepartmentName, item.DepartmentChairman, item.DepartmentAddress }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId }, new { @class = "btn btn-danger", onclick = "return confirm(''Do you want to delete')" })
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>


